	<script type="text/javascript">
		$(function(){
			function load(){
			var from = mini.from("#myForm");
			var data = from.getData();
			var json = mini.encode(data); 
			$.ajax({
			    url: "controller",
			    type: "post",
			    data: { submitData: json },
			    success: function (text) {
			        alert("提交成功，返回结果:" + text);    
			    }
			});
			}
			
			
			/////////////调用区
			
			
			
		});
	</script>
