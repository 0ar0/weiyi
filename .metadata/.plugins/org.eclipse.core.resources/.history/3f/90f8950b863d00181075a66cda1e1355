	<script type="text/javascript">
		
			
			function load(){
				var form = new mini.Form("#myForm");
				form.validate();
				var data = form.getData();
				var json = mini.encode(data); 
				if(json.password!=json.surePassword){
					//如果账号和密码不相等,不能提交
					
					return ;
				}
				console.log(json);
				$.ajax({
				    url: "controller",
				    type: "post",
				    data: { data : json ,query:"UserRegister"},
				    success: function (Rdata) {
				    	if(Rdata.status == "success"){
				       	 	location.href = "";
				    	}
				    	
				    }
				});
			}
			
			
			/////////////调用区
			 mini.parse();
			var submit = mini.get("submit");
			submit.on("click",function(){
				alert("click");
				load();
			});
			
			
		
	</script>
